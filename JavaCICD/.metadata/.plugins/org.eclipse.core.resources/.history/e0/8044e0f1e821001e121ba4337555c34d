package io.github.josepaulo.mockito;

import java.util.ArrayList;
import java.util.List;

import io.github.josepaulo.mockito.service.CourceService;

//CourseBusiness =  SUT - System (Method) Under Test
public class CourseBusiness {

	// CourceService
	private CourceService courceService;

	public CourseBusiness(CourceService courceService) {
		this.courceService = courceService;
	}
	
	
	public List<String> retriveCoursesRelatedToSpring(String student) {
		var filteredCourses = new ArrayList<String>();
		var allCourses = courceService.name(student);
		for (String courses : allCourses) {
			if(courses.contains("Spring")) {
				filteredCourses.add(courses);
			}
		}
		
		return filteredCourses;
	}
}
